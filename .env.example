# =============================================================================
# CHAOS AI MINECRAFT SERVER - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# MINECRAFT SERVER
# -----------------------------------------------------------------------------
MINECRAFT_VERSION=1.21.1
SERVER_NAME=ChaosAI
MOTD=§c§lCHAOS AI SERVER §r§7- §6Where AIs Come to Play
DIFFICULTY=hard
MAX_PLAYERS=20
VIEW_DISTANCE=16
PRIMARY_PLAYER=AlikeRazon

# RCON Configuration (CHANGE THE PASSWORD!)
RCON_PASSWORD=change_this_secure_password_123
RCON_PORT=25575

# Memory allocation (adjust based on your server)
# Recommended: 6G for 8GB droplet, 12G for 16GB droplet
MEMORY=6G

# -----------------------------------------------------------------------------
# AI API KEYS
# -----------------------------------------------------------------------------
# Get your keys from:
# - Anthropic: https://console.anthropic.com/
# - OpenAI: https://platform.openai.com/api-keys
# - Google: https://makersuite.google.com/app/apikey

ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# DISCORD INTEGRATION (Optional)
# -----------------------------------------------------------------------------
# Create a bot at https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_server_id
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx
STATUS_CHANNEL_ID=channel_id_for_status_updates

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# Your server's public IP or domain
SERVER_HOST=localhost
SERVER_PORT=25565

# API Controller
API_HOST=0.0.0.0
API_PORT=3000

# Redis
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# CHAOS CONFIGURATION
# -----------------------------------------------------------------------------
# How often chaos events trigger (in hours)
CHAOS_INTERVAL_MIN=2
CHAOS_INTERVAL_MAX=4

# Enable/disable specific features
ENABLE_CHAOS_EVENTS=true
ENABLE_AI_DEBATES=true
ENABLE_AI_BOTS=true
ENABLE_QUESTS=true

# -----------------------------------------------------------------------------
# AI BOT CONFIGURATION
# -----------------------------------------------------------------------------
# Bot usernames (will join as players)
ORACLE_BOT_NAME=TheOracle
ARCHITECT_BOT_NAME=TheArchitect
EXPLORER_BOT_NAME=TheExplorer

# Bot authentication (offline for now, can switch to microsoft)
BOT_AUTH_MODE=offline

# -----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 4 * * *

# Optional: Cloud backup (S3, GCS, etc.)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=

# -----------------------------------------------------------------------------
# MONITORING (Optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=
# PROMETHEUS_ENABLED=false
